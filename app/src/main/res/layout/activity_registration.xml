<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Guideline at 10% from start -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <!-- Guideline at 90% from start (creating 80% width for title) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <!-- TasteBuds Title - spans about 4/5 of screen width -->
    <TextView
        android:id="@+id/titleTasteBuds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TasteBuds"
        android:textSize="48sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <!-- Recipes Subtitle -->
    <TextView
        android:id="@+id/subtitleRecipes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/titleTasteBuds"
        app:layout_constraintEnd_toEndOf="@id/titleTasteBuds"
        app:layout_constraintTop_toBottomOf="@id/titleTasteBuds" />

    <!-- Button to go to recipes -->
    <Button
        android:id="@+id/btnGoToRecipes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Recipes"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/subtitleRecipes" />

</androidx.constraintlayout.widget.ConstraintLayout>

